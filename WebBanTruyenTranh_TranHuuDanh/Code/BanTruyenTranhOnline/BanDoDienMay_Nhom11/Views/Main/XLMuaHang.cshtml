@{
    Layout = null;
}

<!DOCTYPE html>
@using BanDoDienMay_Nhom11.Models;
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DNTB</title>
      <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <div class="hd">
        <div class="container">
            <div class="navbar">
                <div class="logo">
                
                    <img src="~/Content/img/logo.png" width="300" />
                </div>
                <nav>
                    <ul>
                        <li><a>@Html.ActionLink("Trang Chủ", "Home")</a></li>
                        <li><a href="/Main/Home/#xuong">Sản phẩm</a></li>
                        <li><a href="/Main/Home/#LienHe">Liên hệ</a></li>
                        @if(Session["ten"] == null)
                        {
                            <li><a>@Html.ActionLink("Đăng Nhập/Đăng Ký", "Login")</a></li>
                        }
                        else
                        {
                            KhachHang kh = @Session["ten"] as KhachHang;
                             <li><a href="/Main/ThongTinKhachHang/@kh.MaKH">Xin Chào, @kh.TenKH</a></li>
                        }
                        @if(Session["ten"] != null)
                        {
                            <li><a>@Html.ActionLink("Thoát", "logout")</a></li>
                        }
                    </ul>
                </nav>
                <img src="~/Content/img/cart.png" width="30" height="30" />
            </div>
            <div class="row">
                <div class="col-2">
                    <h1>Xác Nhận Đơn Hàng Thành Công<br />
                        Cảm ơn bạn !</h1><br />
                    <p>Đơn hàng của quý khách đã được chúng tôi ghi nhận.Chúng tôi sẽ liên hệ quý khách trong thời gian sớm nhất và giao hàng đúng hẹn.</p>
                    <a href="/Main/Home" class="btn">Trang Chủ &#8594</a>
                </div>
                <div class="col-2.5">
                    <img src="~/Content/img/tensei-shitara-slime-datta-ken-anime-tensei-shitara-slime-datta-ken-wallpaper-hd-manga-comics-book-person-transparent-png-465187.png" />
                </div>
            </div>
        </div>
    </div>
  

    <div class="ft">
        <div class="container2">
            <div class="row">
                <div class="ft-col-1">
                    <h3>Thank you for visiting our website.</h3>
                    <p>Sản phẩm website Truyện Tranh Online</p>
                </div>
                <div class="ft-col-2">
                 
                    <img src="~/Content/img/logo.png" />
                </div>
                 <div class="ft-col-3">
                     <h3>Thành Viên</h3>
                     <ul>
                         <li>Trần Hữu Danh</li>
                         <li>Trần Thanh Kha</li>
                         <li>Trương Chí Hoàng</li>
                         <li>Nguyễn Thị Thuỳ Dương</li>
                         <li>Đỗ Lê Vi</li>
                     </ul>
                </div>
                 <div class="ft-col-4">
                     <h3>Follow us</h3>
                    <ul>
                        <li>Facebook</li>
                        <li>Twitter</li>
                        <li>Instagram</li>
                        <li>Youtube</li>
                    </ul>
                </div>
            </div>
            <hr />
            <p class="copy">Copyright 2022</p>
        </div>
    </div>
   <script src="~/Content/bootstrap/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>

